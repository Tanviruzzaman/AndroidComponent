<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CreateAlarmFragment">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/ringtoneTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Ringtone: None"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/selectRingtoneButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Ringtone"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/saveAlarmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Alarm" />
</LinearLayout>
